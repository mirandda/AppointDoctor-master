<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:descendantFocusability="blocksDescendants"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvDoktoriFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/data"
            android:layout_alignParentTop="true"
            android:text="Doktori"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/emriPacientit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emri i Pacientit"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_marginTop="16dp"

            />


        <TextView
            android:id="@+id/tvSpitali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvDoktoriFirstName"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_hospital"
            android:text="Hospital"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvLokacioni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_location"
            android:text="Lokacioni"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvLokacioni"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_calendar"
            android:text="Data"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_time"
            android:text="Ora"
            android:textColor="#FFF"
            android:textSize="20dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"></LinearLayout>


</LinearLayout>
