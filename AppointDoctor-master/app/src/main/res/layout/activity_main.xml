<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="122dp"
        android:layout_height="103dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logofinal" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/ic_action_person"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_action_pass"
        android:hint="Fjalekalimi"
        android:inputType="textPassword"
        android:textColor="#fff"
        android:textColorHint="#fff" />


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_login"
        android:text="Kycu"
        android:textColor="#f16f7d"
        android:textSize="18sp"

        />

    <Button
        android:id="@+id/btnRegisterPacient"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/backgound_signup"
        android:text="Regjistrohu si pacient"
        android:textColor="#fff"
        android:textSize="18sp"

        />

    <Button
        android:id="@+id/btnRegisterDoctor"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/backgound_signup"
        android:text="Regjistrohu si doktor"
        android:textColor="#fff"
        android:textSize="18sp"

        />

</LinearLayout>