<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context="com.projekti.projekti.Profili_pacientit">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:id="@+id/fotoProfil"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/doc" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/displayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_bar"
                android:layout_toEndOf="@+id/fotoProfil"
                android:text="Username"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent"></LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />


    <TextView
        android:id="@+id/tvAppoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProfili"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/appoint"
        android:drawableRight="@drawable/ic_arrow"
        android:text="Zgjedh Doktorin"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/tvAppointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_arrow"
        android:layout_alignEnd="@+id/tvProfili"
        android:layout_below="@+id/tvAppoint"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_calendar"
        android:text="Terminet"
        android:textColor="#FFF" />


    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAppointments"


        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
        android:drawableRight="@drawable/ic_arrow"
        android:text="Shkycu"
        android:textColor="#FFF" />


</LinearLayout>
